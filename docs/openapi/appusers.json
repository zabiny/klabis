{
  "openapi": "3.1.0",
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Generated server url"
    }
  ],
  "security": [
    {
      "klabis_auth": []
    }
  ],
  "paths": {
    "/users/{userId}/changeGrantsForm": {
      "get": {
        "tags": [
          "User permissions"
        ],
        "summary": "returns grants assigned to member",
        "description": "Requires `members:permissions` grant",
        "operationId": "getUserGrants",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "ID of application user",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Edit member grants form content",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MemberGrantsForm"
                }
              }
            }
          }
        },
        "security": [
          {
            "klabis": [
              "openid"
            ]
          },
          {
            "klabis_auth": [
              "klabis"
            ]
          }
        ]
      },
      "put": {
        "tags": [
          "User permissions"
        ],
        "summary": "updates grants assigned to user",
        "description": "Requires `members:permissions` grant",
        "operationId": "updateUserGrants",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "ID of application user",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MemberGrantsForm"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User grants were successfully updated"
          }
        },
        "security": [
          {
            "klabis_auth": [
              "klabis"
            ]
          }
        ]
      }
    },
    "/grants": {
      "get": {
        "tags": [
          "User permissions"
        ],
        "summary": "returns details about available security grants what can be assigned to users",
        "operationId": "getAllGrants",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/HalFormsOptionItemApplicationGrant"
                  }
                }
              },
              "application/klabis+json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/HalFormsOptionItemApplicationGrant"
                  }
                }
              },
              "application/hal+json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/HalFormsOptionItemApplicationGrant"
                  }
                }
              },
              "application/prs.hal-forms+json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/HalFormsOptionItemApplicationGrant"
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "klabis_auth": [
              "klabis"
            ]
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "MemberGrantsForm": {
        "type": "object",
        "description": "Data for form setting member grants",
        "properties": {
          "grants": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "MEMBERS_REGISTER",
                "MEMBERS_EDIT",
                "MEMBERS_SUSPENDMEMBERSHIP",
                "MEMBERS_RESUMEMEMBERSHIP",
                "EVENTS_MANAGE",
                "CALENDAR_MANAGE",
                "SYSTEM_ADMIN",
                "APPUSERS_PERMISSIONS",
                "DEPOSIT_FINANCE"
              ]
            }
          }
        }
      },
      "HalFormsOptionItemApplicationGrant": {
        "type": "object",
        "properties": {
          "value": {
            "type": "string",
            "enum": [
              "MEMBERS_REGISTER",
              "MEMBERS_EDIT",
              "MEMBERS_SUSPENDMEMBERSHIP",
              "MEMBERS_RESUMEMEMBERSHIP",
              "EVENTS_MANAGE",
              "CALENDAR_MANAGE",
              "SYSTEM_ADMIN",
              "APPUSERS_PERMISSIONS",
              "DEPOSIT_FINANCE"
            ]
          },
          "prompt": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "klabis_auth": {
        "type": "oauth2",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "/oauth/authorize",
            "tokenUrl": "/oauth/token",
            "scopes": {
              "openid": "openid scope",
              "klabis": "Klabis API"
            }
          }
        }
      }
    }
  }
}